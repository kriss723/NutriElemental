@page
@model HospiEnCasa.App.Presentacion.Pages.Coachs.IndexModel
@{
}
<h1>Lista de Coachs</h1>

<div class="table-responsive">
    <table class="table table-success table-striped table-sm">
        <thead class="table-dark">
            <tr>
                <th scope="col"> Nombre </th>
                <th scope="col"> Apellidos </th>
                <th scope="col"> Cedula </th>
                <th scope="col"> Genero </th>
                <th scope="col">Tarjeta Profesional</th>
                <th scope="col">Horas Laborales</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        @foreach (var p in Model.Coach)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Apellido</td>
                <td>@p.Cedula</td>            
                <td>@p.Genero</td>
                <td>@p.TarjetaProfesional</td>
                <td>@p.HorasLaborales</td>
                <td>
                    <a class="btn btn-warning table-btn m-0" asp-page="./Actualizar" asp-route-Id=@p.Id>
                        <i class="fas fa-user-edit"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger table-btn m-0" asp-page="./Eliminar" asp-route-Id=@p.Id>
                        <i class="fas fa-user-minus"></i>
                    </a>
                </td>
                
            </tr>
        }
    </table>
</div>

<a class="btn btn-info" asp-page="./Crear">Crear Coach</a>


